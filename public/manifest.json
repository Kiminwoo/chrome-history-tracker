{
  "manifest_version": 3,
  "name": "History Time Tracker",
  "version": "1.0",
  "permissions": [
    "history",
    "identity",
    "identity.email",
    "activeTab",
    "scripting",
    "storage"
  ],  
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/favicon.ico",
      "48": "icons/favicon.ico",
      "128": "icons/favicon.ico"
    }
  },
  "icons": {
    "16": "icons/favicon.ico",
    "48": "icons/favicon.ico",
    "128": "icons/favicon.ico"
  }
}